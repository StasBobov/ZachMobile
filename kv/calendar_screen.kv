#: import utils kivy.utils
<CalendarScreen>:
    MDFloatLayout:
        MDRaisedButton:
            text: "Open Date Picker"
            pos_hint: {'center_x': .5, 'center_y': .5}
            on_release: app.show_date_picker()
        MDLabel:
            id: date_label
            text: 'Some text'
            pos_hint: {'center_x': .95, 'center_y': .4}
        ImageButton:
            size_hint: .2, .15
            pos_hint: {"top": .9, "right": .25}
            source: "icons/back.png"
            on_release:
                app.change_screen('home_screen')
        ImageButton:
            size_hint: .2, .15
            pos_hint: {"top": .7, "right": .5}
            source: "icons/calendar.png"
            on_release:
                app.change_screen('calendar_kivy')