<Button>
    size_hint: (0.2, 0.2)


<EventCalendarScreen>:
    BoxLayout:
        orientation: "vertical"
        size_hint: 1, 1
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, .15
            ImageButton:
                size_hint: .15, 1
                pos_hint: {"top": 1, "right": .25}
                source: "icons/back.png"
                on_release:
                    app.change_screen(app.previous_screen)
                    app.previous_screen = "event_calendar_screen"
            ImageButton:
                size_hint: .25, 1
                source: "icons/cal_back.png"
                on_release:
                    app.month_back()
            TextInput:
                id: month
                text: ""
                font_size: 20
                multiline: False
                halign: "center"
                size_hint: (.35, 1)
                background_color: (20/255, 20/255, 30/255, 1)
                foreground_color: (1, 1, 1, 1)
            ImageButton:
                size_hint: .25, 1
                source: "icons/cal_next.png"
                on_release:
                    app.month_next()

        GridLayout:
            cols: 7
            rows: 7
            ### row 1 ###
            Button:
                text: 'Mon'
            Button:
                text: 'Tue'
            Button:
                text: 'Wed'
            Button:
                text: 'Thu'
            Button:
                text: 'Fri'
            Button:
                text: 'Sat'
            Button:
                text: 'Sun'

            ### row 2 ###
