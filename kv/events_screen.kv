<EventsScreen>:
    FloatLayout:
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .2
            pos_hint: {"top": 1, "right": 1}
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#FF0000")
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                size_hint: .5, .5
                pos_hint: {"top": .7, "right": .5}
                source: "icons/back.png"
                on_release:
                    app.change_screen(app.previous_screen)
                    app.previous_screen = "events_screen"
            LabelButton:
                id: sort_by_date
                name: 'sort_by_date'
                text: 'Sort by date'
                on_release:
                    app.change_screen('event_calendar_screen')
                    app.previous_screen = "events_screen"
            ImageButton:
                size_hint: .5, .5
                pos_hint: {"top": .7, "right": .1}
                source: "icons/krest.png"
                on_release:
                    app.date_sort = None
                    sort_by_date.text = 'Sort by date'
                    app.root.ids['inactive_events_screen'].ids['inactive_sort_by_date'].text = 'Sort by date'
                    app.refill_events_layouts(app.date_sort )
            ImageButton:
                size_hint: .5, .5
                pos_hint: {"top": .7, "right": .5}
                source: "icons/add_event.png"
                on_release:
                    app.change_screen('new_event_screen')
                    app.previous_screen = "events_screen"
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .1
            pos_hint: {"top": .8, "right": 1}
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#696969")
                Rectangle:
                    size: self.size
                    pos: self.pos
            Label:
                text: "Active events"
                size_hint: .7, .8
                pos_hint: {"top": 1, "left": 1}
            LabelButton:
                text: "Inactive events"
                size_hint: .3, .8
                pos_hint: {"top": 1, "left":.3}
                on_release:
                    app.change_screen('inactive_events_screen')
                    app.previous_screen = 'events_screen'
        ScrollView:
            pos_hint: {"top": .7, "right": 1}
            size_hint: 1, .7
            GridLayout:
                id: events_layout
                name: "events_layout"
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                row_default_height: '100dp'
                row_fource_default: True
                canvas:
                    Color:
                        rgb: utils.get_color_from_hex("#A9A9A9")
                    Rectangle:
                        size: self.size
                        pos: self.pos
