#: import utils kivy.utils
#:import voice voice

<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            rows: 1
            cols: 2
            pos_hint: {"top": .8, "left": 1}
            size_hint: 1, .3
            ImageButton:
                source: "icons/calendar.jpg"
                on_release:
                    app.change_screen('event_calendar_screen')
                    app.previous_screen = "home_screen"
            ImageButton:
                source: "icons/events.jpg"
                on_release:
                    app.change_screen('events_screen')
                    app.previous_screen = "home_screen"
        GridLayout:
            rows: 1
            cols: 2
            pos_hint: {"top": .5, "left": 1}
            size_hint: 1, .3
            ImageButton:
                source: "icons/todolist.png"
                on_release:
                    app.change_screen('todolist_screen')
                    app.previous_screen = "home_screen"
            ImageButton:
                source: "icons/projects.jpg"
                on_release:
                    app.change_screen('projects_screen')
                    app.previous_screen = "home_screen"
        BoxLayout:
            id: mike_button
            name: 'mike_button'
            size_hint: 1, .4
            pos_hint: {"bottom": 1, "left": 1}
            orientation: 'vertical'
            ImageButton:
                source: "icons/mic.jpg"
                on_release:
                    voice.record()
                    print('change the icon')
        BoxLayout:
            size_hint: 1, .4
            pos_hint: {"bottom": 1, "left": 1}
            orientation: 'horizontal'
            ImageButton:
                source: "icons/notes.jpg"
                on_release:
                    app.change_screen('notes_screen')
                    app.previous_screen = "home_screen"
            ImageButton:
                source: "icons/shopping_list.png"
                on_release:
                    app.change_screen('shopping_list_screen')
                    app.previous_screen = "home_screen"