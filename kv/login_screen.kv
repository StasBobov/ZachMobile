<LoginScreen>:
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#3983F2")
        Rectangle:
            size: self.size
            pos: self.pos
    FloatLayout:
        TextInput:
            id: login_email
            multiline: False
            hint_text: 'email'
            size_hint: .8, .1
            pos_hint: {'top': .9, 'right': .9}
        TextInput:
            id: login_password
            multiline: False
            password: True
            hint_text: 'password'
            size_hint: .8, .1
            pos_hint: {'top': .7, 'right': .9}
        Label:
            id: login_message
            color: (1, 0, 0, 1)
            size_hint: .8, .1
            pos_hint: {'top': .4, 'right': .9}
        LabelButton:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#3983F2") if self.state == 'normal' else utils.get_color_from_hex("#3244AA")
                Rectangle:
                    size: self.size
                    pos: self.pos
            text: '[u]Sign up![/u]'
            markup: True
            size_hint: .3, .1
            pos_hint: {'top': .2, 'left': .8}
            on_release:
                app.my_base.sign_up(login_email.text, login_password.text)
        LabelButton:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#3983F2") if self.state == 'normal' else utils.get_color_from_hex("#3244AA")
                Rectangle:
                    size: self.size
                    pos: self.pos
            text: '[u]Log in![/u]'
            markup: True
            size_hint: .3, .1
            pos_hint: {'top': .2, 'right': .5}
            on_release:
                app.my_base.login(login_email.text, login_password.text)
        LabelButton:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#3983F2") if self.state == 'normal' else utils.get_color_from_hex("#3244AA")
                Rectangle:
                    size: self.size
                    pos: self.pos
            text: '[u]Forgot your password/email[/u]'
            markup: True
            size_hint: .3, .1
            pos_hint: {'top': .2, 'right': .8}
            on_release:
                app.change_screen('login_recovery_screen')
                app.root.ids['login_recovery_screen'].ids['login_email'].text = login_email.text
