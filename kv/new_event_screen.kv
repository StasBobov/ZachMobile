<NewEventScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#3983F2")
            Rectangle:
                size: self.size
                pos: self.pos
        ImageButton:
            size_hint: .2, .15
            pos_hint: {"top": 1, "right": .25}
            source: "icons/back.png"
            on_release:
                app.change_screen("events_screen")
                app.previous_screen = "new_event_screen"
        TextInput:
            id: title
            name: "title"
            hint_text: 'title'
            multiline: False
            size_hint: .8, .1
            pos_hint: {'top': .8, 'right': .9}
        TextInput:
            id: description
            name: "description"
            hint_text: 'description'
            size_hint: .8, .3
            pos_hint: {'top': .6, 'right': .9}
        Label:
            id: info_label
            name: "info_label"
            size_hint: .8, .1
            pos_hint: {'top': .3, 'right': .9}
        LabelButton:
            id: chosen_date
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#3983F2") if self.state == 'normal' else utils.get_color_from_hex("#3244AA")
                Rectangle:
                    size: self.size
                    pos: self.pos
            text: 'date'
            markup: True
            size_hint: .4, .1
            pos_hint: {'top': .2, 'right': .5}
            on_release:
                app.change_screen('event_calendar_screen')
                app.previous_screen = "new_event_screen"
        LabelButton:
            id: chosen_time
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#3983F2") if self.state == 'normal' else utils.get_color_from_hex("#3244AA")
                Rectangle:
                    size: self.size
                    pos: self.pos
            text: 'time'
            markup: True
            size_hint: .4, .1
            pos_hint: {'top': .2, 'right': .9}
            on_release:
                app.show_time_picker()
                app.previous_screen = "new_event_screen"
        ImageButton:
            size_hint: .2, .15
            pos_hint: {"top": .1, "right": .9}
            source: "icons/save.png"
            on_release:
                app.save_new_event()
        ImageButton:
            size_hint: .2, .15
            pos_hint: {"top": .1, "right": .5}
            source: "icons/clear.png"
            on_release:
                app.change_screen("events_screen")
                app.previous_screen = "new_event_screen"
