<SettingsScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#3983F2")
            Rectangle:
                size: self.size
                pos: self.pos
    BoxLayout:
        orientation: "horizontal"
        pos_hint: {"top": 1, "left": 1}
        size_hint: 1, .2
        ImageButton:
            size_hint: .3, .8
            pos_hint: {"top": .9, "right": .5}
            source: "icons/back.png"
            on_release:
                app.change_screen(app.previous_screen)
                app.previous_screen = "settings_screen"
        Label:
            text: "Settings"
            size_hint: .3, .8
            pos_hint: {"top": 1, "left": .7}
    BoxLayout:
        orientation: "vertical"
        size_hint: 1, .8
        Label:
            text: "Personal information"
            size_hint: 1, .1
            pos_hint: {"top": 1, "left": 1}
        GridLayout:
            size_hint: 1, .4
            pos_hint: {"top": .9, "left": 1}
            cols: 3
            Label:
                text: "First Name"
            Label:
                text: "Stas"
            ImageButton:
                source: "icons/edit.png"
                on_release:
                    print("Setting_1")
            Label:
                text: "Last Name"
            Label:
                text: "Bobov"
            ImageButton:
                source: "icons/edit.png"
                on_release:
                    print("Setting_1")
            Label:
                text: "Email"
            Label:
                text: "stas@stas.com"
            ImageButton:
                source: "icons/edit.png"
                on_release:
                    print("Setting_1")
            Label:
                text: "Telephon"
            Label:
                text: "+97200000000"
            ImageButton:
                source: "icons/edit.png"
                on_release:
                    print("Setting_1")
        Label:
            text: "Privacy & Notices"
            size_hint: 1, .1
            pos_hint: {"top": 1, "left": 1}
        GridLayout:
            size_hint: 1, .3
            pos_hint: {"top": .9, "left": 1}
            cols: 3
            Label:
                text: "Password"
            LabelButton:
                text: "Change password"
                on_release:
                    print("Setting_1")
            Label:
                text: "Some text"
            Label:
                text: "SMS reminder"
            CheckBox:
                on_active:
                    print(self.active)
            Label:
                text: "Some text"
            Label:
                text: "email reminder"
            CheckBox:
                on_active:
                    print(self.active)
            Label:
                text: "Some text"



