#:import my_base my_base

<SettingsScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#3983F2")
            Rectangle:
                size: self.size
                pos: self.pos
    BoxLayout:
        orientation: "horizontal"
        pos_hint: {"top": 1, "left": 1}
        size_hint: 1, .2
        ImageButton:
            size_hint: .3, .8
            pos_hint: {"top": .9, "right": .5}
            source: "icons/back.png"
            on_release:
                app.change_screen(app.previous_screen)
                app.previous_screen = "settings_screen"
        Label:
            text: "Settings"
            size_hint: .3, .8
            pos_hint: {"top": 1, "left": .7}
        LabelButton:
            text: 'Logout BUTTON'
            on_release:
                my_base.logout()
    BoxLayout:
        orientation: "vertical"
        size_hint: 1, .8
        Label:
            text: "Personal information"
            size_hint: 1, .1
            pos_hint: {"top": 1, "left": 1}
        GridLayout:
            size_hint: 1, .4
            pos_hint: {"top": .9, "left": 1}
            cols: 3
            Label:
                text: "First Name"
            Label:
                id: user_name
                name: "user_name"
                text: ""
            ImageButton:
                source: "icons/edit.png"
                on_release:
                    settings.modal_settings_window(command='user_name')
            Label:
                text: "Last Name"
            Label:
                id: user_lname
                name: "user_lname"
                text: ""
            ImageButton:
                source: "icons/edit.png"
                on_release:
                    settings.modal_settings_window(command='user_lname')
            Label:
                text: "Email"
            Label:
                id: user_email
                name: "user_email"
                text: ""
            ImageButton:
                source: "icons/edit.png"
                on_release:
                    print("Setting_1")
            Label:
                text: "Telephone"
            Label:
                id: user_telephone
                name: "user_telephone"
                text: ""
            ImageButton:
                source: "icons/edit.png"
                on_release:
                    print("Setting_1")
        Label:
            text: "Privacy & Notices"
            size_hint: 1, .1
            pos_hint: {"top": 1, "left": 1}
        GridLayout:
            size_hint: 1, .3
            pos_hint: {"top": .9, "left": 1}
            cols: 3
            Label:
                text: "Password"
            LabelButton:
                text: "Change password"
                on_release:
                    print("Setting_1")
            Label:
                text: "Some text"
            Label:
                text: "SMS reminder"
            CheckBox:
                on_active:
                    print(self.active)
            Label:
                text: "Some text"
            Label:
                text: "email reminder"
            CheckBox:
                on_active:
                    print(self.active)
            Label:
                text: "Some text"



