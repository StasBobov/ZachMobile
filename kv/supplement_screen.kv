<SupplementScreen>:
    BoxLayout:
        pos_hint: {"top": 1, "right": 1}
        size_hint: 1, 1
        orientation: "vertical"
        TextInput:
            id: addition
            name: 'addition'
            hint_text: 'addition'
            size_hint: 1, .7
            pos_hint: {'top': 1, 'right': 1}
        Label:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#3983F2")
                Rectangle:
                    size: self.size
                    pos: self.pos
            id: info_label
            name: "info_label"
            text: ""
            background_color: 1, 0, 1, 1
            size_hint: 1, .3
            pos_hint: {'top': .2, 'right': 1}
        BoxLayout:
            pos_hint: {"top": .2, "right": 1}
            size_hint: 1, .2
            orientation: "horizontal"
            ImageButton:
                size_hint: 1, 1
                pos_hint: {"top": 1, "right": .5}
                source: "icons/back.png"
                on_release:
                    app.change_screen(app.previous_screen)
                    projects.clear_supplement_screen()
            ImageButton:
                size_hint: 1, 1
                pos_hint: {"top": 1, "right": .5}
                source: "icons/save.png"
                on_release:
                    projects.supplement_save()
                    projects.clear_supplement_screen()

