<TodolistScreen>:
    FloatLayout:
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .2
            pos_hint: {"top": 1, "right": 1}
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#FF0000")
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                size_hint: .5, .5
                pos_hint: {"top": .7, "right": .5}
                source: "icons/back.png"
                on_release:
                    app.change_screen(app.previous_screen)
                    app.previous_screen = "todolist_screen"
            Label:
                id: sort_tasks
                name: 'sort_tasks'
                text: 'All tasks LABEL'
            LabelButton:
                text: 'Show all BUTTON'
                on_release:
                    app.task_sort = None
                    app.refill_tasks_layouts(app.task_sort)
                    sort_tasks.text = 'All tasks LABEL'
            LabelButton:
                text: 'Show outstanding BUTTON'
                on_release:
                    app.task_sort = 'Actual'
                    app.refill_tasks_layouts(app.task_sort)
                    sort_tasks.text = 'Actual tasks LABEL'
            ImageButton:
                size_hint: .5, .5
                pos_hint: {"top": .7, "right": .5}
                source: "icons/create_task.png"
                on_release:
                    app.change_screen('new_task_screen')
                    app.previous_screen = "todolist_screen"
        ScrollView:
            pos_hint: {"top": .8, "right": 1}
            size_hint: 1, .7
            GridLayout:
                id: tasks_layout
                name: "tasks_layout"
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                row_default_height: '100dp'
                row_fource_default: True
                canvas:
                    Color:
                        rgb: utils.get_color_from_hex("#A9A9A9")
                    Rectangle:
                        size: self.size
                        pos: self.pos