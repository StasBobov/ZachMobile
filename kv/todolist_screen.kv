<TodolistScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#3983F2")
            Rectangle:
                size: self.size
                pos: self.pos
        ImageButton:
            size_hint: .2, .15
            pos_hint: {"top": .9, "right": .25}
            source: "icons/back.png"
            on_release:
                app.change_screen(app.previous_screen)
                app.previous_screen = "todolist_screen"
        ImageButton:
            size_hint: .2, .15
            pos_hint: {"top": .5, "right": .5}
            source: "icons/add_task.png"
            on_release:
                app.change_screen('add_task_screen')
                app.previous_screen = "todolist_screen"
        Label:
            text: "This is your ToDo list"
            size_hint: 1, .1
            pos_hint: {"top": 1, "left": 1}