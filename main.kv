GridLayout:
    cols: 1
    FloatLayout:
        GridLayout:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#3983F2")
                Rectangle:
                    size: self.size
                    pos: self.pos
            rows: 1
            cols: 3
            pos_hint: {"top": 1, "left": 1}
            size_hint: 1, 0.15
            Button:
                text: "Home"
                on_release:
                    app.change_screen('home_screen')
            Image:
                source: "icons/logo.png"
            ImageButton:
                source: "icons/settings.png"
                on_release:
                    app.change_screen('settings_screen')
        ScreenManager:
            size_hint: 1, 0.85
            pos_hint: {"top": .85, "left": 1}
            id: screen_manager
            LoginScreen:
                name: "login_screen"
                id: login_screen
            HomeScreen:
                name: "home_screen"
                id: home_screen
            SettingsScreen:
                name: "settings_screen"
                id: settings_screen
            EventsScreen:
